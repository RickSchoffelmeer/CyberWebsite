@model CyberWebsite.Models.Categories

@{
    ViewBag.Title = ViewBag.CategoryName;
    int categoryId = ViewBag.CategoryId;
}

<h2>@ViewBag.CategoryName</h2>

<div class="row">
    <div class="col-md-4">
        <!-- renders a partial view with the subcategories -->
        @{ Html.RenderAction("_CategoryList", "Categories", new { id = categoryId }); }
    </div>
    <div class="col-md-8">
        @if (categoryId < 10)
        { <h2>Kies een Robot</h2> }
                                  else
        { 
       
        }
       @{Html.RenderAction("_ProductInfo", "Product");}
    </div>
</div>